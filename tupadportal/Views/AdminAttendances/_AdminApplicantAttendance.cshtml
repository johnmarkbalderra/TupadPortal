@model dynamic

@{
    var applicant = Model.Applicant;
    var attendances = Model.Attendances;
}

@* <h3>Name: @applicant.FirstName @applicant.LastName</h3> *@
<p><strong>Name:</strong>  @applicant.FirstName @applicant.LastName</p>
<p><strong>Address:</strong> @applicant.Barangay</p>
<p><strong>Tupad ID No.:</strong> _____________________</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Time In AM</th>
            <th>Time Out AM</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var attendance in attendances)
        {
            <tr>
                <td>@attendance.Date.ToString("MMMM dd, yyyy")</td>
                <td>@(attendance.TimeInAM.HasValue ? attendance.TimeInAM.Value.ToString("hh:mm tt") : "N/A")</td>
                <td>@(attendance.TimeOutAM.HasValue ? attendance.TimeOutAM.Value.ToString("hh:mm tt") : "N/A")</td>
            </tr>
        }
    </tbody>
</table>
